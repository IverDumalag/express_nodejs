# Cloudinary Configuration
CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_FOLDER=your_folder_name

# Server Configuration
PORT=3000

# SMTP Configuration (Brevo - Primary)
SMTP_USER=your_brevo_smtp_username
SMTP_PASS=your_brevo_smtp_password

# Gmail Configuration (Fallback - Recommended for Render)
GMAIL_USER=your_gmail_address
GMAIL_PASS=your_gmail_app_password

# Note: For Gmail, you need to:
# 1. Enable 2-Factor Authentication
# 2. Generate an App Password (not your regular password)
# 3. Use the 16-character app password as GMAIL_PASS